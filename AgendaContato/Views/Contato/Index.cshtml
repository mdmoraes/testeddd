@model IEnumerable<AgendaContato.Domain.Entities.Contato>

@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/AngularCode.js"></script>
<style>

    .btn-space {
        margin-left: -5%;
        background-color: cornflowerblue;
        font-size: large;
    }
</style>
<h2>Contatos</h2>
<div ng-app="myApp">
    <div ng-controller="myCtrl" ng-init="GetAllData()" class="divList">
        <p class="divHead">Lista de Contatos</p>
        <table cellpadding="12" class="table table-bordered table-hover">

            <tr>

                <td>
                    <b>ID</b>

                </td>

                <td>
                    <b>Nome</b>

                </td>

                <td>
                    <b>Telefone</b>

                </td>

                <td>
                    <b>E-mail</b>

                </td>

                <td>
                    <b>Acões</b>

                </td>

            </tr>

            <tr ng-repeat="Emp in Contato">

                <td>
                    {{Emp.Emp_Id}}

                </td>

                <td>
                    {{Emp.Emp_Name}}

                </td>

                <td>
                    {{Emp.Emp_City}}

                </td>

                <td>
                    {{Emp.Emp_Age}}

                </td>

                <td>
                    <input type="button" class="btn btn-warning" value="Update" ng-click="UpdateEmp(Emp)" />
                    <input type="button" class="btn btn-danger" value="Delete" ng-click="DeleteEmp(Emp)" />

                </td>

            </tr>

        </table>
        <div class="form-horizontal" role="form">
            <div class="container">
                <div class="row">
                    <h2>
                        <span id="spn">Adicionar novo contato.</span>

                    </h2>

                </div>
                <div class="row">
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Nome:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputEmail" placeholder="Nome" ng-model="EmpName">

                            </div>

                        </div>

                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Telefone:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputPassword" placeholder="Telefone" ng-model="EmpCity">

                            </div>

                        </div>

                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">E-mail:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputLabel3" placeholder="E_mail" ng-model="EmpAge">

                            </div>

                        </div>

                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-6 col-lg-4">
                        <input type="button" id="btnSave" class="form-control btn-space" value="Submit" ng-click="InsertData()" />

                    </div>

                </div>

            </div>

        </div>

    </div>
    @Html.Hidden("EmpID_")


</div>
